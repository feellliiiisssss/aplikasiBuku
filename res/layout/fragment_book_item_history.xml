<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_history_book"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    android:background="@color/light"
    tools:context=".fragment.BookItemHistoryFragment">

    <LinearLayout
        android:id="@+id/ll_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_buku"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/logo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="2"
                android:text="Nama Penulis"
                android:textColor="@color/neutral_dark"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_judul_buku"
                android:lines="2"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Buku"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/neutral_dark"/>

                <TextView
                    android:id="@+id/tv_harga_buku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rpxxxx"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>